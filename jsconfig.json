{
  "compilerOptions": {
    "module": "commonjs",
    "forceConsistentCasingInFileNames": false,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "vueCompilerOptions": {
    "jsx": "preserve",
    "plugins": ["@volar/vue-language-plugin-pug"]
  }
}
